<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.inputData.photo.UploadPhotoFragment">

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:layout_marginStart="@dimen/dimen_16dp"
        android:layout_marginEnd="@dimen/dimen_16dp"
        android:gravity="center_horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/progress_one"
            android:layout_width="80dp"
            android:layout_height="5dp"
            android:background="@drawable/bg_rounded_10dp_9a"
            android:layout_marginEnd="@dimen/dimen_8dp"
            app:layout_constraintEnd_toStartOf="@+id/progress_two"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <View
            android:id="@+id/progress_two"
            android:layout_width="80dp"
            android:layout_height="5dp"
            android:background="@drawable/bg_rounded_10dp_9a"
            android:layout_marginEnd="@dimen/dimen_8dp"
            app:layout_constraintStart_toEndOf="@+id/progress_one"
            app:layout_constraintTop_toTopOf="parent"/>

        <View
            android:id="@+id/progress_three"
            android:layout_width="80dp"
            android:layout_height="5dp"
            android:background="@drawable/bg_rounded_10dp_9a"
            android:layout_marginEnd="@dimen/dimen_8dp"
            app:layout_constraintEnd_toStartOf="@+id/progress_four"
            app:layout_constraintTop_toTopOf="parent"/>

        <View
            android:id="@+id/progress_four"
            android:layout_width="80dp"
            android:layout_height="5dp"
            android:background="@drawable/bg_rounded_10dp_white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    </LinearLayout>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txv_who_i_am"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_siapa_saya"
        style="@style/WhiteBold30"
        android:layout_marginTop="@dimen/dimen_24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txv_min_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_min_photo"
        style="@style/White10"
        android:layout_marginTop="@dimen/dimen_4dp"
        app:layout_constraintTop_toBottomOf="@+id/txv_who_i_am"
        app:layout_constraintStart_toStartOf="@+id/txv_who_i_am"
        app:layout_constraintEnd_toEndOf="@+id/txv_who_i_am"/>

    <ImageView
        android:id="@+id/img_profile"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_plus"
        android:padding="@dimen/dimen_36dp"
        android:background="@drawable/bg_oval_white"
        android:layout_marginTop="@dimen/dimen_32dp"
        app:layout_constraintTop_toBottomOf="@+id/txv_min_photo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/img_profile2"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:background="@drawable/bg_rounded_10dp_white"
        android:src="@drawable/ic_plus"
        android:padding="@dimen/dimen_28dp"
        android:layout_marginEnd="@dimen/dimen_24dp"
        android:layout_marginTop="@dimen/dimen_32dp"
        app:layout_constraintTop_toBottomOf="@+id/img_profile"
        app:layout_constraintEnd_toStartOf="@+id/img_profile3"/>

    <ImageView
        android:id="@+id/img_profile3"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:background="@drawable/bg_rounded_10dp_white"
        android:src="@drawable/ic_plus"
        android:padding="@dimen/dimen_28dp"
        android:layout_marginTop="@dimen/dimen_32dp"
        app:layout_constraintTop_toBottomOf="@+id/img_profile"
        app:layout_constraintStart_toStartOf="@+id/img_profile"
        app:layout_constraintEnd_toEndOf="@+id/img_profile"/>

    <ImageView
        android:id="@+id/img_profile4"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:background="@drawable/bg_rounded_10dp_white"
        android:src="@drawable/ic_plus"
        android:padding="@dimen/dimen_28dp"
        android:layout_marginStart="@dimen/dimen_24dp"
        android:layout_marginTop="@dimen/dimen_32dp"
        app:layout_constraintTop_toBottomOf="@+id/img_profile"
        app:layout_constraintStart_toEndOf="@+id/img_profile3"/>

    <include
        android:id="@+id/include"
        layout="@layout/button_next" />

</androidx.constraintlayout.widget.ConstraintLayout>